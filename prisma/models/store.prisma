model Store {
  id                String              @id @default(uuid()) @db.Uuid
  userId            String?             @db.Uuid

  name              String              @db.VarChar(64)
  description       String?             @db.VarChar(256)
  slug              String              @unique @db.VarChar(64)
  locationId        String?             @db.Uuid
  address           String              @db.VarChar(256)
  phone             String?             @db.VarChar(32)
  logoUrl           String?             @db.VarChar(256)
  currency          ValidCurrency 

  taxEnabled        Boolean             @default(false)
  taxIncluded       Boolean             @default(false)
  taxPercent        Float?

  parentStoreId     String?             @db.Uuid
  isActive          Boolean             @default(true)

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  parentStore       Store?              @relation("StoreBranches", fields: [parentStoreId], references: [id], onDelete: Cascade)
  branches          Store[]             @relation("StoreBranches")

  user              User?               @relation(fields: [userId], references: [id], onDelete: Cascade)
  location          Location?           @relation(fields: [locationId], references: [id], onDelete: SetNull)

  categories        StoreCategory[]
  items             StoreItem[]
  tables            StoreTable[]
  workingHours      StoreWorkingHour[]
  scanLogs          StoreExplorerLog[]

  @@index([locationId])
  @@index([parentStoreId])
  @@unique([userId, name])
}
